        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["logo"],
                "properties": {"logo": {"type": "string", "format": "binary"}}
              }
            }
          }
        },
        "responses": {
          "200": {"description": "Logo updated successfully", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/CompanyResponse"}}}},
          "401": {"description": "Unauthorized"},
          "404": {"description": "Company not found"},
          "422": {"description": "Validation error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/ValidationError"}}}}
        }
      }
    },

        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "uuid", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}},
          {"name": "job_id", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}}
        ],
        "responses": {
          "204": {"description": "Job deleted successfully"},
          "401": {"description": "Unauthorized"},
          "404": {"description": "Job or company not found"}
        }
      }

        }
      }
    },
    "/api/employer/company/{uuid}/logo": {
      "put": {
        "summary": "Update company logo",
        "description": "Uploads and updates the company's logo.",
        "tags": ["Employer - Company"],
        "security": [{"bearerAuth": []}],

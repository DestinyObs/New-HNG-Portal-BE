{
    "openapi": "3.0.3",
    "info": {
        "title": "HNG Portal API Documentation",
        "version": "1.0.0",
        "description": "API documentation for HNG Portal backend"
    },

    "servers": [
        {
            "url": "/",
            "description": "Base API Server"
        }
    ],

    "paths": {
        "/api/faq": {
            "get": {
                "tags": ["FAQ"],
                "summary": "Get list of FAQs",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "FAQ type: company or talent",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": ["company", "talent"]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "FAQs retrieved successfully"
                    }
                }
            }
        },

        "/api/faq/{faq}": {
            "get": {
                "tags": ["FAQ"],
                "summary": "Get a single FAQ by ID",
                "parameters": [
                    {
                        "name": "faq",
                        "in": "path",
                        "required": true,
                        "description": "FAQ ID",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "FAQ retrieved successfully" },
                    "404": { "description": "FAQ not found" }
                }
            }
        },

        "/api/jobs": {
            "get": {
                "tags": ["Jobs"],
                "summary": "List all jobs with filters",
                "parameters": [
                    { "name": "q", "in": "query", "schema": { "type": "string" }, "required": false },
                    { "name": "location_id", "in": "query", "schema": { "type": "integer" }, "required": false },
                    { "name": "location", "in": "query", "schema": { "type": "string" }, "required": false },
                    { "name": "job_type_id", "in": "query", "schema": { "type": "integer" }, "required": false },
                    { "name": "track_id", "in": "query", "schema": { "type": "integer" }, "required": false },
                    { "name": "category_id", "in": "query", "schema": { "type": "integer" }, "required": false },
                    { "name": "min_price", "in": "query", "schema": { "type": "number" }, "required": false },
                    { "name": "max_price", "in": "query", "schema": { "type": "number" }, "required": false }
                ],
                "responses": {
                    "200": { "description": "Successfully retrieved list of jobs" }
                }
            }
        },

        "/api/jobs/{job}": {
            "get": {
                "tags": ["Jobs"],
                "summary": "Get a single job by ID",
                "parameters": [
                    {
                        "name": "job",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Job details retrieved" },
                    "404": { "description": "Job not found" }
                }
            }
        },

        "/api/jobs/{job}/related": {
            "get": {
                "tags": ["Jobs"],
                "summary": "Get related jobs",
                "parameters": [
                    {
                        "name": "job",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Related jobs retrieved successfully" },
                    "404": { "description": "Job not found" }
                }
            }
        },

        "/api/jobs/search": {
            "get": {
                "tags": ["Jobs"],
                "summary": "Search jobs using keyword",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": false,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Search results returned" }
                }
            }
        },

        "/waitlist": {
            "post": {
                "summary": "Join the waitlist",
                "description": "Creates a new waitlist entry and sends a confirmation email.",
                "tags": ["Waitlist"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["full_name", "email", "role"],
                                "properties": {
                                    "full_name": { "type": "string", "example": "John Doe" },
                                    "email": { "type": "string", "format": "email", "example": "johndoe@example.com" },
                                    "role": { "type": "string", "enum": ["talent", "company"], "example": "talent" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Waitlist entry created successfully.",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Waitlist" }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/ValidationError" }
                            }
                        }
                    }
                }
            }
        },

        "/waitlist/{id}": {
            "get": {
                "summary": "Get waitlist entry",
                "description": "Returns the details of a single waitlist entry.",
                "tags": ["Waitlist"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "The ID of the waitlist entry",
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Waitlist entry retrieved successfully.",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Waitlist" }
                            }
                        }
                    },
                    "404": { "description": "Waitlist entry not found" }
                }
            }
        }
    },

    "components": {
        "schemas": {
            "Waitlist": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer", "example": 12 },
                    "full_name": { "type": "string", "example": "John Doe" },
                    "email": { "type": "string", "example": "johndoe@example.com" },
                    "role": { "type": "string", "enum": ["talent", "company"], "example": "talent" },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" }
                }
            },

            "ValidationError": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The given data was invalid."
                    },
                    "errors": {
                        "type": "object",
                        "example": {
                            "email": ["This email is already on our waitlist!"]
                        }
                    }
                }
            }
        }
    },

    "tags": [
        { "name": "FAQ", "description": "FAQ endpoints" },
        { "name": "Jobs", "description": "Job endpoints" },
        { "name": "Waitlist", "description": "Waitlist endpoints" }
    ]
}

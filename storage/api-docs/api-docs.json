        }
      },
      "put": {
        "summary": "Update company details",
        "description": "Updates fields for an existing company.",
        "tags": ["Employer - Company"],
        "security": [{"bearerAuth": []}],
        "parameters": [{"name": "uuid", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}}],
        "requestBody": {
          "required": false,
          "content": {"application/json": {"schema": {"$ref": "#/components/schemas/CompanyUpdateRequest"}}}
        },
        "responses": {
          "200": {"description": "Company updated successfully", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/CompanyResponse"}}}},

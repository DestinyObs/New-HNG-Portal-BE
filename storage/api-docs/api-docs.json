        },
        "responses": {
          "200": {"description": "Photo updated successfully", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/UserResponse"}}}},
          "401": {"description": "Unauthorized"},
          "422": {"description": "Validation error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/ValidationError"}}}}
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get all users",
        "description": "Retrieve paginated list of users (requires authentication).",
        "tags": ["Users"],

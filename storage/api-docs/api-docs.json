{
  "openapi": "3.0.3",
  "info": {
    "title": "HNG-PORTAL-BE API",
    "version": "1.0.0",
    "description": "API endpoints for hng portal creation."
  },
  "paths": {
    "/waitlist": {
      "post": {
        "summary": "Join the waitlist",
        "description": "Creates a new waitlist entry and sends a confirmation email.",
        "tags": ["Waitlist"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["full_name", "email", "role"],
                "properties": {
                  "full_name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "johndoe@example.com"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["talent", "company"],
                    "example": "talent"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Waitlist entry created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Waitlist"
                }
              }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/waitlist/{id}": {
      "get": {
        "summary": "Get waitlist entry",
        "description": "Returns the details of a single waitlist entry.",
        "tags": ["Waitlist"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the waitlist entry"
          }
        ],
        "responses": {
          "200": {
            "description": "Waitlist entry retrieved successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Waitlist" }
              }
            }
          },
          "404": { "description": "Waitlist entry not found" }
        }
      }
    },

    "/employer/company": {
      "post": {
        "summary": "Create a company",
        "description": "Creates a new company for an employer.",
        "tags": ["Company"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CompanyCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Company created successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CompanyResponse" }
              }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ValidationError" }
              }
            }
          }
        }
      }
    },

    "/employer/company/{id}": {
      "get": {
        "summary": "Retrieve a company",
        "description": "Gets a single company by its ID.",
        "tags": ["Company"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Company retrieved successfully.",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/CompanyResponse" } }
            }
          },
          "404": { "description": "Company not found." }
        }
      },
      "put": {
        "summary": "Update company details",
        "description": "Updates fields for an existing company.",
        "tags": ["Company"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CompanyUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Company updated successfully.",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/CompanyResponse" } }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/ValidationError" } }
            }
          }
        }
      }
    },

    "/employer/company/{id}/logo": {
      "put": {
        "summary": "Update company logo",
        "description": "Uploads and updates the company's logo.",
        "tags": ["Company"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["logo"],
                "properties": {
                  "logo": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logo updated successfully.",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/CompanyResponse" } }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/ValidationError" } }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Waitlist": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 12 },
          "full_name": { "type": "string", "example": "John Doe" },
          "email": { "type": "string", "example": "johndoe@example.com" },
          "role": {
            "type": "string",
            "enum": ["talent", "company"],
            "example": "talent"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-16T12:45:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-16T12:45:00Z"
          }
        }
      },

      "ValidationError": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": "The given data was invalid." },
          "errors": {
            "type": "object",
            "example": { "email": ["This email is already on our waitlist!"] }
          }
        }
      },

      "CompanyCreateRequest": {
        "type": "object",
        "required": ["user_id", "name", "slug"],
        "properties": {
          "user_id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "maxLength": 255 },
          "slug": { "type": "string", "maxLength": 255 },
          "description": { "type": "string", "nullable": true },
          "logo_url": { "type": "string", "format": "uri", "nullable": true },
          "country_id": { "type": "string", "format": "uuid", "nullable": true },
          "website_url": { "type": "string", "format": "uri", "nullable": true },
          "is_verified": { "type": "boolean" },
          "official_email": { "type": "string", "format": "email", "nullable": true },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "suspended"]
          }
        }
      },

      "CompanyUpdateRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "maxLength": 255 },
          "slug": { "type": "string", "maxLength": 255, "nullable": true },
          "description": { "type": "string", "nullable": true },
          "logo_url": { "type": "string", "format": "uri", "nullable": true },
          "country_id": { "type": "string", "format": "uuid", "nullable": true },
          "website_url": { "type": "string", "format": "uri", "nullable": true },
          "is_verified": { "type": "boolean" },
          "official_email": { "type": "string", "format": "email", "maxLength": 255 },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "suspended"]
          }
        }
      },

      "CompanyResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "status": { "type": "integer" },
          "data": { "$ref": "#/components/schemas/Company" }
        }
      },

      "Company": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "user_id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "description": { "type": "string", "nullable": true },
          "logo_url": { "type": "string", "nullable": true },
          "country_id": { "type": "string", "nullable": true },
          "website_url": { "type": "string", "nullable": true },
          "is_verified": { "type": "boolean" },
          "official_email": { "type": "string", "nullable": true },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "suspended"]
          },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}

        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/CompanyCreateRequest"}
            }
          }
        },
        "responses": {
          "201": {"description": "Company created successfully", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/CompanyResponse"}}}},
          "401": {"description": "Unauthorized", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/Error"}}}},
          "422": {"description": "Validation error", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/ValidationError"}}}}
        }
      }
    },
    "/api/employer/company/{uuid}": {
      "get": {
        "summary": "Retrieve a company",
        "description": "Gets a single company by its UUID.",
        "tags": ["Employer - Company"],
        "security": [{"bearerAuth": []}],
        "parameters": [{"name": "uuid", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}}],
